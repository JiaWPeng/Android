<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="设置">

        <CheckBoxPreference
            app:key="wifi_download"
            app:title="下载"

            app:summary="WIFI下自动下载"
            />

        <ListPreference
            app:defaultValue="clear_cache"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="清理缓存"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="功能">

        <SwitchPreferenceCompat
            app:key="nigt"
            app:title="夜间模式"
            app:summaryOff="已关闭"
            app:summaryOn="已打开"/>

        <SwitchPreferenceCompat

            app:key="attachment"
            app:summaryOff="已关闭"
            app:summaryOn="已打开"
            app:title="通知" />

    </PreferenceCategory>

</PreferenceScreen>