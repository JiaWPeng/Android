<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFI Demo"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/but_on"
        android:text="打开Wifi"
        android:layout_below="@+id/title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Switch
        android:id="@+id/switch_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI"
        android:showText="true"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track"
        android:layout_marginTop="8dp"
        android:layout_marginStart="30dp"
        android:switchMinWidth="60dp"
        android:switchPadding="5dp"
        android:textOff="OFF"
        android:textOn="ON" />

    <Button
        android:id="@+id/but_off"
        android:text="关闭WIFi"
        android:layout_below="@+id/but_on"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/but_visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_off"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="显示附近Wif" />

    <ListView
        android:id="@+id/list_wifi"
        android:layout_below="@+id/but_visible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>